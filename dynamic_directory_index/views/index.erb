<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
    <%= @page_title %>
    </title>

  </head>

  <body>
    <div id="layout">
      <div id="main">
        <div class="header">
          <h2>Dynamic Directory</h2>
        </div>

        <div class="content">
          <h4 class="content-subhead">Index</h4>

          <div class="pure-menu">
            <ul class="pure-menu-list">
              <% @public_index.each do |filename| %>
              <li class='pure-menu-item'>
                <a href="<%= filename %>" class="pure-menu-link"><%= filename %></a>
              </li>
              <% end %>
            </ul>
          </div>
          <p>Sort: <a href="/?descending=<%= (!@descending).to_s %>" class="sort-option"><%= @sort_button %></a></p>
        </div>
      </div>
    </div>
  </body>


</html>
